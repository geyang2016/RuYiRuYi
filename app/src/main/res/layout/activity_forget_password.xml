<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/c1"
    tools:context="com.ruyiruyi.ruyiruyi.ui.activity.ForgetPasswordActivity">

    <com.ruyiruyi.rylibrary.cell.ActionBar
        android:id="@+id/my_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo_login"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:gravity="center_vertical"
        android:layout_marginTop="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone"/>

        <EditText
            android:id="@+id/phone_number_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:hint="请输入您的手机号"
            android:textColorHint="@color/c4"
            android:textSize="15sp"
            android:inputType="phone"
            android:maxLength="11"
            android:background="@drawable/edit_bg_select"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_code"/>
        <FrameLayout
            android:id="@+id/code_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/code_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="请输入验证码"
                android:textColorHint="@color/c4"
                android:textSize="15sp"
                android:inputType="number"
                android:background="@drawable/edit_bg_select"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                />
            <TextView
                android:id="@+id/get_code_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textColor="#ffffff"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_gravity="right"
                android:background="@drawable/login_button"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_password"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/password_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="请重置您的密码"
                android:textColorHint="@color/c4"
                android:textSize="15sp"
                android:inputType="textPassword"
                android:background="@drawable/edit_bg_select"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                />
            <!--<ImageView
                android:id="@+id/show_password_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_show"
                android:layout_gravity="center_vertical|right"
                />-->

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_password"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/password_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="请确认您的密码"
                android:textColorHint="@color/c4"
                android:textSize="15sp"
                android:inputType="textPassword"
                android:background="@drawable/edit_bg_select"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                />
          <!--  <ImageView
                android:id="@+id/show_password_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_show"
                android:layout_gravity="center_vertical|right"
                />-->

        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:text="重置密码"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:background="@drawable/login_button"
        android:paddingTop="7dp"
        android:gravity="center"
        android:paddingBottom="7dp"/>


</LinearLayout>
