<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    >


    <FrameLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_recommend"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/title_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="经济舒适型"
            android:textSize="16sp"
            android:textColor="@color/c6"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"/>
        <ImageView
            android:id="@+id/title_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_right_car"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="30dp"/>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/big_image"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:src="@drawable/ic_launcher"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/one_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_launcher"/>
                <ImageView
                    android:id="@+id/two_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_launcher"/>
                <ImageView
                    android:id="@+id/three_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_launcher"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:text="此处市文字描述此处市文字描述此处市文字描述此处市文字描述此处市文字描述此处市文字描述此处市文字描述此处市文字描述此处市文字描述此处市文字描述此处市文字描述"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/price_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</LinearLayout>
